<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardviewhorarios"
    android:layout_width="match_parent"
    android:layout_height="242dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    android:layout_margin="1dp"
    >

    <com.github.snowdream.android.widget.SmartImageView
        android:id="@+id/imgSugerencia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@color/cardview_dark_background" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/fnd_Titulos"
        android:alpha="0.9"
        >
        <TextView
            android:id="@+id/txtNombrePlatillo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/clr_Letra"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtPrecio"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/clr_Letra"
            android:textSize="18sp"
            android:textColorHint="@color/colorPrimary"
            />

    </LinearLayout>
    </android.support.v7.widget.CardView>