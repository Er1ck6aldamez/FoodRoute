<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/txtCorrelativo_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero"
        android:textColor="@color/clr_Itm_Padre"
        android:layout_gravity="center_vertical"
        android:paddingLeft="15dp"
        />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    >

    <TextView
        android:id="@+id/txtNombreRest"
        android:layout_width="wrap_content"
        android:textColor="@color/colorTexto"
        android:layout_height="wrap_content"
        android:text="Restaurnante"
        android:textStyle="bold"
      />

    <TextView
        android:id="@+id/txtHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/clr_divider_padre"
        android:text="Apertura" />

    <TextView
        android:id="@+id/txtHoraCierre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cierre"
        android:textColor="@color/clr_divider_padre" />

</LinearLayout>

</LinearLayout>
